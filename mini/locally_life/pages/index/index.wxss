/**index.wxss**/
.swiper-section {
  width: 100%;
  height: 380rpx;
}

.swiper-section navigator,
.swiper-section image {
  width: 100%;
  height: 100%;
}

.menu-grid {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  background-color: #fff;
  border-top: 1rpx #ebebeb solid;
  /* border-left: 1rpx #ebebeb solid; */
  font-size: 28rpx;
  color: #242424;
}

.menu-grid .menu-item {
  width: 250rpx;
  height: 250rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 16rpx;
  box-sizing: border-box;
  border-right: 1rpx #ebebeb solid;
  border-bottom: 1rpx #ebebeb solid;
}

.menu-grid .menu-logo {
  width: 92.31rpx;
  height: 92.31rpx;
}

.menu-grid .menu-title {
  margin-top: 10px;
}

.link-section {
  display: flex;
  justify-content: space-around;
  width: 750rpx;
  height: 200rpx;
  margin-top: 10px;
}

.link-section .link-item {
  width: 48%;
  height: 100%;
  padding: 20rpx;
}

.link-section .link-item image {
  width: 100%;
  height: 100%;
}