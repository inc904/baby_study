/* pages/goods_list/index.wxss */
.good_list .goods_item_wrap .goods_item {
  display: flex;
  border-bottom: 1rpx solid #ccc;
  max-height: 230rpx;
  margin: 10rpx 0;
}
.good_list .goods_item_wrap .goods_item .logo {
  width: 200rpx;
  height: 200rpx;
}
.good_list .goods_item_wrap .goods_item .logo image {
  width: 98%;
}
.good_list .goods_item_wrap .goods_item .detail {
  width: 70%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-start;
  padding-left: 20rpx;
}
.good_list .goods_item_wrap .goods_item .detail .title {
  overflow: hidden;
  text-overflow: hidden;
  -webkit-line-clamp: 2;
  display: -webkit-box;
  -webkit-box-orient: vertical;
}
.good_list .goods_item_wrap .goods_item .detail .price {
  color: var(--themeColor);
  font-size: 32rpx;
}
.good_list .all-tip {
  text-align: center;
  font-size: 30rpx;
  margin: 20rpx;
  color: var(--themeColor);
}
