/* pages/category/index.wxss */
page {
  height: 100%;
}
.cates {
  height: 100%;
}
.cates .cates_container {
  height: calc(100vh - 90rpx);
  display: flex;
}
.cates .cates_container .left {
  flex: 2;
}
.cates .cates_container .left .menuItem {
  font-size: 30rpx;
  padding: 10rpx 6rpx;
  text-align: center;
}
.cates .cates_container .left .active {
  color: var(--themeColor);
  border-left: 5px solid currentColor;
}
.cates .cates_container .right {
  flex: 5;
}
.cates .cates_container .right .subCatItem {
  width: 100%;
}
.cates .cates_container .right .subCatItem .subCat_title {
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
}
.cates .cates_container .right .subCatItem .itemWrap {
  display: flex;
  flex-wrap: wrap;
}
.cates .cates_container .right .subCatItem .itemWrap .subItem {
  width: 33.33%;
  padding: 10rpx;
}
.cates .cates_container .right .subCatItem .itemWrap .subItem view {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.cates .cates_container .right .subCatItem .itemWrap .subItem view image {
  width: 100%;
}
